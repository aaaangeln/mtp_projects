@{
    ViewData["Title"] = "Your portfolio - Проекты";
}
@using MySql.Data.MySqlClient;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css//main.css">
    <style>
        .btn-submit {
            border-radius: 5px;
            background: rgba(255,116,0,0.85);
            border: 2px solid #ff7400;
        }

            .btn-submit:hover {
                background: rgba(255,116,0,1);
            }
    </style>
</head>
<body>
    <nav class="nav">
        <div class="container">
            <div class="nav-row">
                <a asp-action="Index_login" asp-controller="Home" class="logo"><strong>Your</strong> portfolio</a>
                <ul class="nav-list">
                    <li class="nav-list__item"><a asp-action="Index_login" asp-controller="Home" class="nav-list__link">Главная</a></li>
                    <li class="nav-list__item"><a asp-action="Projects_login" asp-controller="Home" class="nav-list__link nav-list__link--active">Проекты</a></li>
                    <li class="nav-list__item"><a asp-action="Kabinet" asp-controller="Home" class="nav-list__link">Кабинет</a></li>
                </ul>
                <button class="dark-mode-btn">
                    <img src="~/images/icons/sun.svg" alt="Light mode" class="dark-mode-btn__icon">
                    <img src="~/images/icons/moon.svg" alt="Dark mode" class="dark-mode-btn__icon">
                </button>
            </div>
        </div>
    </nav>

    <main class="section">
        <div class="container">
            <details style="list-style: none;">
                <summary style="list-style: none;">
                    <img src="~/images/sort.svg" height="30px" width="30px" />
                </summary>
                <ul style="list-style-type: none;" class="sort">

                    <li class="sort__item">
                        <form method="post" asp-controller="Home" asp-action="Sort_a_auth">
                            <button type="submit" style="background: none; border: none; color: #ff7400;">
                                <img height="25px" width="25px" src="../../images/sort_rost.svg" />
                                по возрастанию
                            </button>
                        </form>
                    </li>

                    <li class="sort__item">
                        <form method="post" asp-controller="Home" asp-action="Sort_ya_auth">
                            <button type="submit" style="background: none; border: none; color: #ff7400;">
                                <img height="25px" width="25px" src="~/images/sort_ub.svg" />
                                по убыванию
                            </button>
                        </form>
                    </li>

                    <li class="sort__item">
                        <form method="post" asp-controller="Home" asp-action="Search_auth">
                            <input type="radio" name="searchOption" value="option1" />
                            <label for="option1" style="color: #ff7400;">По названию</label><br>
                            <input type="radio" name="searchOption" value="option2" />
                            <label for="option2" style="color: #ff7400;">По навыкам</label><br>
                            <input name="searchQuery" type="text" style="background: none; border: 1px solid #ff7400; color: #ff7400;" />
                            <button style="background: #ff7400; border: none; color: black;" type="submit">Поиск</button>
                        </form>
                    </li>

                </ul>
            </details>

            <div id="block" class="block">
                <h2 class="title-1">Проекты</h2>
                <ul class="projects">
                    @foreach (var project in Model)
                    {
                        <li class="project" style="max-width: 345px;">
                            <form asp-controller="Home" asp-action="Projects_login" method="post">
                                <input type="text" name="id_project" value="@project.Id" style="display: none;" />
                                <button type="submit" style="background-color: transparent; border: none;">
                                    <img src="@project.Image" alt="Project img" class="project__img">
                                    <h3 class="project__title">@project.Name</h3>
                                </button>
                            </form>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <div class="footer__wrapper">
                <ul class="social">
                    <li class="social__item"><a href="#!"><img src="~/images/icons/vk.svg" alt="Link"></a></li>
                    <li class="social__item"><a href="#!"><img src="~/images/icons/instagram.svg" alt="Link"></a></li>
                    <li class="social__item"><a href="#!"><img src="~/images/icons/twitter.svg" alt="Link"></a></li>
                    <li class="social__item"><a href="#!"><img src="~/images/icons/gitHub.svg" alt="Link"></a></li>
                    <li class="social__item"><a href="#!"><img src="~/images/icons/linkedIn.svg" alt="Link"></a></li>
                </ul>
                <div class="copyright">
                    <p>© 2022 frontend-dev.com</p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/js/main.js"></script>
</body>
</html>

